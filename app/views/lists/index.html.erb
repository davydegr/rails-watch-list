<div class="hero">
  <h1>All your lists</h1>
</div>


<h2>Add a list</h2>
<%= simple_form_for(@list) do |f| %>
  <%= f.input :name %>
  <%= f.submit %>
<% end %>

<h2>Your lists</h2>
<% @lists.each do |list| %>

    <%= link_to list_path(list) do  %>
      <p><%= list.name %></p>
    <% end %>

<% end %>
